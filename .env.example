# ===========================================
# DePIN Storage Aggregator - Environment Configuration
# ============================================

# Application
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://depin_user:depin_password@localhost:5432/depin_storage?schema=public

# Stripe (Sandbox Mode)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# Blockchain Configuration (All Testnets)
# Platform wallet - used for on-chain transactions
PLATFORM_WALLET_PRIVATE_KEY=your_testnet_private_key_here
PLATFORM_WALLET_ADDRESS=your_testnet_wallet_address_here

# Filecoin Calibration Testnet
FILECOIN_RPC_URL=https://api.calibration.node.glif.io/rpc/v1
FILECOIN_CHAIN_ID=314159
FILECOIN_EXPLORER_URL=https://calibration.filfox.info

# Arweave Testnet (using ArLocal for development)
ARWEAVE_GATEWAY_URL=https://arweave.net
ARWEAVE_TESTNET_URL=http://localhost:1984

# Storj (Testnet)
STORJ_API_KEY=your_storj_testnet_api_key
STORJ_SATELLITE_URL=https://us1.storj.io
STORJ_ACCESS_GRANT=your_storj_access_grant

# BNB Greenfield Testnet
GREENFIELD_RPC_URL=https://gnfd-testnet-fullnode-tendermint-us.bnbchain.org
GREENFIELD_CHAIN_ID=5600
GREENFIELD_EXPLORER_URL=https://testnet.greenfieldscan.com

# Akash Testnet
AKASH_RPC_URL=https://rpc.testnet-02.aksh.pw
AKASH_CHAIN_ID=testnet-02
AKASH_EXPLORER_URL=https://testnet.mintscan.io/akash-testnet

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cron Jobs
ENABLE_CRON_JOBS=true
PROVIDER_SYNC_CRON=0 */6 * * *
TX_CONFIRMATION_CRON=*/2 * * * *

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
API_KEY_HEADER=X-API-Key

# Session
SESSION_SECRET=your_session_secret_here_change_in_production
